<DataGrid x:Class="RapportAgentPlugin.Views.Utterances.CurrentUtterance.SubCategoryGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RapportAgentPlugin.Views.Utterances"
             mc:Ignorable="d" 
             LoadingRow="DataGrid_LoadingRow"
             d:DesignHeight="300" d:DesignWidth="300" 
            HeadersVisibility="Column"
            VirtualizingStackPanel.VirtualizationMode="Recycling" GridLinesVisibility="Horizontal" AutoGenerateColumns="False">
    <DataGrid.Columns>
        <DataGridTextColumn SortDirection="Descending" Width="*" Header="SubCategory" Binding="{Binding Name}" CanUserReorder="False" CanUserResize="False" />
    </DataGrid.Columns>
</DataGrid>
