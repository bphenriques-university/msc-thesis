<DataGrid x:Class="RapportAgentPlugin.Views.Utterances.VariablesGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RapportAgentPlugin.Views.Utterances"
             mc:Ignorable="d"
            HeadersVisibility="Column"
            VirtualizingStackPanel.VirtualizationMode="Recycling" GridLinesVisibility="Horizontal" AutoGenerateColumns="False">
    <DataGrid.Columns>
        <DataGridTextColumn Width="*" Header="Variable" Binding="{Binding VariableName}" />
        <DataGridTextColumn Width="*" Header="Substitution" Binding="{Binding TargetSubstitution}" />
    </DataGrid.Columns>
</DataGrid>